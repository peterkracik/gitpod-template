{
  "root": true,
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2018
  },
  "rules": {
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-var": "error",
    "indent": [
      2,
      2,
      {
        "SwitchCase": 1
      }
    ],
    "prefer-arrow-callback": "error",
    "prefer-template": "error",
    "no-useless-concat": "error",
    "no-unused-vars": "error"
  }
}